<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Spinner?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="UI.RentController">
    <HBox alignment="TOP_CENTER">
        <Label text="Rent ID"/>
        <Spinner fx:id="spnId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="5.0" prefWidth="330.0"/>
    <HBox alignment="TOP_CENTER">
        <Label text="Car ID"/>
        <Spinner fx:id="spnCarId" editable="true" initialValue="0" max="2000000000" min="0"/>
    </HBox>
    <Pane prefHeight="5.0" prefWidth="330.0"/>
    <HBox alignment="TOP_CENTER">
        <TextField fx:id="txtDays" prefHeight="25.0" prefWidth="110.0" promptText="Days"/>
        <TextField fx:id="txtTraveledKm" prefHeight="25.0" prefWidth="110.0" promptText="Traveled Km"/>
    </HBox>
    <HBox alignment="TOP_CENTER">
        <Button text="Add" fx:id="btnAdd" onAction="#btnAddClick"/>
        <Button text="Cancel" fx:id="btnCancel" onAction="#btnCancelClick"/>
    </HBox>
</VBox>